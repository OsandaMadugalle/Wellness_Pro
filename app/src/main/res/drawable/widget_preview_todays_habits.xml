<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background similar to the widget -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#800A1F2E"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#FF4CAF50"/>
        </shape>
    </item>
    <!-- Text "Today's Habits" -->
    <item android:gravity="center_horizontal" android:top="16dp">
        <shape android:shape="rectangle"> <!-- Placeholder for text area -->
             <size android:width="100dp" android:height="20dp"/>
             <solid android:color="#00000000" /> <!-- Transparent, actual text not rendered here -->
        </shape>
    </item>
    <!-- Text for Percentage -->
     <item android:gravity="center" android:top="10dp">
        <shape android:shape="rectangle"> <!-- Placeholder for text area -->
             <size android:width="60dp" android:height="28dp"/>
             <solid android:color="#00000000" />
        </shape>
    </item>
    <!-- ProgressBar shape -->
    <item android:gravity="bottom|center_horizontal" android:bottom="16dp" >
        <shape android:shape="rectangle">
            <size android:height="8dp" android:width="150dp" />
            <solid android:color="#FF4CAF50" /> <!-- Simulate filled progress -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>