<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0A1F2E"
    tools:context=".ui.MoodLogActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewMoodLogTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Log Your Mood"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFE8F4F8"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewMoodSelectionPrompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How are you feeling? (1 = Very Bad, 5 = Very Good)"
                android:textColor="#FFE8F4F8"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textViewMoodLogTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/moodSelectionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewMoodSelectionPrompt">

                <Button android:id="@+id/buttonMood1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="1" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textColor="#FFE8F4F8" app:strokeColor="#FFE8F4F8" android:layout_marginEnd="4dp"/>
                <Button android:id="@+id/buttonMood2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="2" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textColor="#FFE8F4F8" app:strokeColor="#FFE8F4F8" android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
                <Button android:id="@+id/buttonMood3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="3" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textColor="#FFE8F4F8" app:strokeColor="#FFE8F4F8" android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
                <Button android:id="@+id/buttonMood4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="4" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textColor="#FFE8F4F8" app:strokeColor="#FFE8F4F8" android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
                <Button android:id="@+id/buttonMood5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="5" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:textColor="#FFE8F4F8" app:strokeColor="#FFE8F4F8" android:layout_marginStart="4dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextMoodNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Add a note (optional)"
                android:layout_marginTop="16dp"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="2"
                android:gravity="top"
                android:background="#FF1E3A5A"
                android:padding="12dp"
                android:textColor="#FFE8F4F8"
                android:textColorHint="#FFA0A0A0"
                app:layout_constraintTop_toBottomOf="@id/moodSelectionLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonSaveMood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Log Mood"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/editTextMoodNotes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:backgroundTint="#FF4CAF50"
                android:textColor="#FFE8F4F8"/>

            <TextView
                android:id="@+id/textViewChartTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your Mood Trend (Last 7 Days)"
                android:textColor="#FFE8F4F8"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/buttonSaveMood"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/moodChart"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewChartTitle" />

            <TextView
                android:id="@+id/textViewNoMoodsChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log your mood to see your trend!"
                android:textColor="#FFA0A0A0"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/moodChart"
                app:layout_constraintBottom_toBottomOf="@id/moodChart"
                app:layout_constraintStart_toStartOf="@id/moodChart"
                app:layout_constraintEnd_toEndOf="@id/moodChart" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>