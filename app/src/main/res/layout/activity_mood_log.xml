<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="false"
    tools:context=".ui.MoodLogActivity">

    <!-- Standard header for main screens -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
    android:paddingLeft="@dimen/screen_padding"
    android:paddingTop="@dimen/header_padding_top"
    android:paddingRight="@dimen/screen_padding"
    android:paddingBottom="@dimen/header_padding_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            
            <View
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="4dp"
                android:visibility="invisible" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewMoodLogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_your_mood"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:gravity="center"
                app:autoSizeMaxTextSize="26sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/screen_padding"
            android:paddingEnd="@dimen/screen_padding"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/textViewMoodSelectionPrompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/how_are_you_feeling"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textViewMoodLogTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewMoodHelper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mood_tap_emoji_hint"
                android:textColor="@color/textColorSecondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textViewMoodSelectionPrompt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/moodSelectionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewMoodHelper">

                <!-- Mood 1: Very Sad -->
                <LinearLayout
                    android:id="@+id/moodOption1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_horizontal"
                    android:contentDescription="@string/very_sad">

                    <TextView
                        android:id="@+id/textViewMoodEmoji1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_emoji_very_sad"
                        android:textSize="28sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/textViewMoodDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/very_sad"
                        android:textSize="12sp"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Mood 2: Sad -->
                <LinearLayout
                    android:id="@+id/moodOption2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/sad">

                    <TextView
                        android:id="@+id/textViewMoodEmoji2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_emoji_sad"
                        android:textSize="28sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/textViewMoodDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sad"
                        android:textSize="12sp"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Mood 3: Neutral -->
                <LinearLayout
                    android:id="@+id/moodOption3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/neutral">

                    <TextView
                        android:id="@+id/textViewMoodEmoji3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_emoji_neutral"
                        android:textSize="28sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/textViewMoodDescription3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/neutral"
                        android:textSize="12sp"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Mood 4: Okay -->
                <LinearLayout
                    android:id="@+id/moodOption4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/okay">

                    <TextView
                        android:id="@+id/textViewMoodEmoji4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_emoji_okay"
                        android:textSize="28sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/textViewMoodDescription4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/okay"
                        android:textSize="12sp"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Mood 5: Happy -->
                <LinearLayout
                    android:id="@+id/moodOption5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/happy">

                    <TextView
                        android:id="@+id/textViewMoodEmoji5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_emoji_happy"
                        android:textSize="28sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/textViewMoodDescription5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/happy"
                        android:textSize="12sp"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewMotivationalMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/moodSelectionLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="This is a motivational message!"
                tools:visibility="visible"/>

            <EditText
                android:id="@+id/editTextMoodNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/add_a_note_optional"
                android:layout_marginTop="16dp"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="2"
                android:gravity="top"
                android:background="@color/cardBackgroundColor"
                android:padding="12dp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/textColorHint"
                app:layout_constraintTop_toBottomOf="@id/textViewMotivationalMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/actionsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/editTextMoodNotes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/buttonCancelMood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    app:backgroundTint="@color/cardBackgroundColor"
                    android:textColor="@color/textColorPrimary"/>

                <Button
                    android:id="@+id/buttonSaveMood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/log_mood"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@color/colorAccentGreen"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>