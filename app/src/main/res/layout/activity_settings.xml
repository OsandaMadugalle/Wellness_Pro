<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".ui.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cardBackgroundColor"
        android:elevation="4dp"
        app:title="@string/settings"
        app:titleTextColor="@color/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/settingsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Account Section -->
            <TextView
                android:id="@+id/textViewAccountHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_account"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>

            <LinearLayout
                android:id="@+id/rowChangeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardBackgroundColor">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_change_display_name"
                    android:textColor="@color/textColorPrimary"/>
                <Button
                    android:id="@+id/buttonChangeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_edit"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorAccentBlue"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>

            <!-- Shake Quick Mood Section -->
            <TextView
                android:id="@+id/textViewShakeHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Quick Mood (Shake)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>

            <LinearLayout
                android:id="@+id/rowShakeEnable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardBackgroundColor">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable shake-to-add-mood"
                    android:textColor="@color/textColorPrimary"/>
                <Switch
                    android:id="@+id/switchShakeQuickMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/colorAccentGreen"
                    app:trackTint="@color/iconTintMuted"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowShakeSensitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardBackgroundColor">
                <TextView
                    android:id="@+id/textViewShakeSensitivityLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sensitivity"
                    android:textColor="@color/textColorPrimary"/>
                <SeekBar
                    android:id="@+id/seekBarShakeSensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50" />
                <TextView
                    android:id="@+id/textViewShakeSensitivityValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current: 2.7g"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Notifications Section -->
            <TextView
                android:id="@+id/textViewNotificationsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settings_notifications"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>

            <LinearLayout
                android:id="@+id/rowEnableNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardBackgroundColor">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_enable_app_notifications"
                    android:textColor="@color/textColorPrimary"/>
                <Switch
                    android:id="@+id/switchEnableNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/colorAccentGreen"
                    app:trackTint="@color/iconTintMuted"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>

            <!-- Appearance Section -->
            <TextView
                android:id="@+id/textViewAppearanceHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settings_appearance"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>

            <LinearLayout
                android:id="@+id/rowDarkMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardBackgroundColor">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_dark_mode"
                    android:textColor="@color/textColorPrimary"/>
                <Switch
                    android:id="@+id/switchDarkMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/colorAccentGreen"
                    app:trackTint="@color/iconTintMuted"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>

            <!-- About Section -->
            <TextView
                android:id="@+id/textViewAboutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settings_about"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>

            <LinearLayout
                android:id="@+id/rowVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardBackgroundColor">
                <TextView
                    android:id="@+id/textViewVersionLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_version_label"
                    android:textColor="@color/textColorPrimary"/>
                <TextView
                    android:id="@+id/textViewVersionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:text="@string/settings_version_value"/>
            </LinearLayout>

            <!-- Reset App (destructive) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/rowResetApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardBackgroundColor">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_reset_app_label"
                    android:textColor="@color/textColorPrimary"/>
                <Button
                    android:id="@+id/buttonResetApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reset_app_button"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorAccentRed"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>