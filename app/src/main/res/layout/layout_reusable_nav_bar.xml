<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navbar_background"
    android:paddingHorizontal="2dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:elevation="8dp">

    <!-- Navigation Item 1: Dashboard -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/navButtonDashboard"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dashboard"
        android:textSize="10sp"
        android:textColor="#FFE8F4F8"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:singleLine="true"
        android:ellipsize="end"
        app:icon="@drawable/ic_dashboard"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="24dp"
        app:iconTint="#FFE8F4F8"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/navButtonHabits"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Navigation Item 2: Habits -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/navButtonHabits"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/habits"
        android:textSize="10sp"
        android:textColor="#FFE8F4F8"
        app:icon="@drawable/ic_habits"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="24dp"
        app:iconTint="#FFE8F4F8"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navButtonDashboard"
        app:layout_constraintEnd_toStartOf="@+id/navButtonMoodJournal"
        app:layout_constraintHorizontal_weight="1"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!-- Navigation Item 3: Mood Journal -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/navButtonMoodJournal"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/mood_journal"
        android:textSize="10sp"
        android:textColor="#FFE8F4F8"
        app:icon="@drawable/ic_energy"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="24dp"
        app:iconTint="#FFE8F4F8"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navButtonHabits"
        app:layout_constraintEnd_toStartOf="@+id/navButtonProfile"
        app:layout_constraintHorizontal_weight="1"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!-- Navigation Item 4: Profile -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/navButtonProfile"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="10sp"
        android:textColor="#FFE8F4F8"
        app:icon="@drawable/ic_user"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="24dp"
        app:iconTint="#FFE8F4F8"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navButtonMoodJournal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:singleLine="true"
        android:ellipsize="end"/>

</androidx.constraintlayout.widget.ConstraintLayout>