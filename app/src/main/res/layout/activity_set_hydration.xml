<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_set_hydration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".ui.SetHydrationActivity">

    <LinearLayout
        android:id="@+id/headerLayoutSetHydration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewSetHydrationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_hydration_goal_amp_reminders"
            android:textColor="@color/textColorPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            app:autoSizeMaxTextSize="26sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayoutSetHydration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutSetHydration"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewSetGlassesGoalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_glasses_goal"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSetGlassesGoal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="@color/textColorPrimary"
            android:backgroundTint="@color/colorAccentGreen"
            android:textColorHint="@color/textColorHint"
            android:hint="@string/e_g_8"
            android:gravity="center"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewSetGlassesGoalLabel"
            app:layout_constraintStart_toEndOf="@id/textViewSetGlassesGoalLabel" />

        <TextView
            android:id="@+id/textViewSetRemindersInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/set_reminders_below"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/editTextSetGlassesGoal"
            app:layout_constraintStart_toEndOf="@id/editTextSetGlassesGoal"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewMasterToggleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/hydration_reminders"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/textViewSetRemindersInfo"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchMasterEnableReminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/enable_reminders"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewMasterToggleLabel"
            app:layout_constraintStart_toEndOf="@id/textViewMasterToggleLabel" />

        <Button
            android:id="@+id/buttonPauseForDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pause_for_today"
            android:backgroundTint="@color/colorAccentGreen"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textViewMasterToggleLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewCustomMessageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/custom_hydration_message_label"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/buttonPauseForDay"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextCustomHydrationMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:minHeight="48dp"
            android:maxLines="2"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="@string/custom_hydration_message_hint"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorHint"
            android:backgroundTint="@color/colorAccentBlue"
            app:layout_constraintTop_toBottomOf="@id/textViewCustomMessageLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewNotificationOptionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/notification_options"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/editTextCustomHydrationMessage"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchReminderSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/enable_sound"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintTop_toBottomOf="@id/textViewNotificationOptionsLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchReminderVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:text="@string/enable_vibration"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintTop_toBottomOf="@id/textViewNotificationOptionsLabel"
            app:layout_constraintStart_toEndOf="@id/switchReminderSound" />

        <TextView
            android:id="@+id/textViewSmartRemindersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/smart_reminders"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/switchReminderVibration"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchEnableSmartReminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/enable_smart_reminders"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintTop_toBottomOf="@id/textViewSmartRemindersLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewNoDrinkThresholdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/no_drink_threshold_label"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/switchEnableSmartReminders"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextNoDrinkThresholdMinutes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:minHeight="48dp"
            android:maxLines="1"
            android:inputType="number"
            android:hint="@string/minutes_hint"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorHint"
            android:backgroundTint="@color/colorAccentGreen"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewNoDrinkThresholdLabel"
            app:layout_constraintStart_toEndOf="@id/textViewNoDrinkThresholdLabel" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSetReminderTimes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/textViewNoDrinkThresholdLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_reminder_time" />

        <TextView
            android:id="@+id/textViewSetNoReminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_reminders_set_yet_add_times_below"
            android:textColor="@color/textColorSecondary"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/recyclerViewSetReminderTimes"
            app:layout_constraintBottom_toBottomOf="@id/recyclerViewSetReminderTimes"
            app:layout_constraintStart_toStartOf="@id/recyclerViewSetReminderTimes"
            app:layout_constraintEnd_toEndOf="@id/recyclerViewSetReminderTimes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottomSetHydration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonSetAddTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/add_reminder_time"
            android:backgroundTint="@color/colorAccentGreen"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonSaveHydrationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_settings"
            android:backgroundTint="@color/colorAccentBlue"
            android:textColor="@color/white" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/navBarContainerBottomSetHydration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>