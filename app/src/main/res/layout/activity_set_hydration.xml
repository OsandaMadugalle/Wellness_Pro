<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_set_hydration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".ui.SetHydrationActivity">

    <LinearLayout
        android:id="@+id/headerLayoutSetHydration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewSetHydrationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_hydration_goal_amp_reminders"
            android:textColor="@color/textColorPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            app:autoSizeMaxTextSize="26sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/textViewSetHydrationSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/set_hydration_subtitle"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayoutSetHydration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutSetHydration"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Goal card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textViewSetGlassesGoalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_glasses_goal"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <EditText
                        android:id="@+id/editTextSetGlassesGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minEms="2"
                        android:ems="2"
                        android:minHeight="48dp"
                        android:inputType="number"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:textColor="@color/textColorPrimary"
                        android:backgroundTint="@color/colorAccentGreen"
                        android:textColorHint="@color/textColorHint"
                        android:hint="@string/e_g_8"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textViewSetGlassesGoalHelper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/daily_goal_helper"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Reminders card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textViewSetRemindersInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_reminders_below"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/buttonSetAddTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_reminder_time"
                        android:backgroundTint="@color/colorAccentGreen"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/add_reminder_time" />

                </LinearLayout>

                <!-- Master enable switch and pause button restored for activity wiring -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <Switch
                        android:id="@+id/switchMasterEnableReminders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/enable_reminders"
                        android:contentDescription="@string/enable_reminders"
                        android:importantForAccessibility="yes"
                        android:focusable="true"
                        android:textColor="@color/textColorPrimary" />

                    <Button
                        android:id="@+id/buttonPauseForDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/pause_for_today"
                        android:backgroundTint="@color/colorAccentGreen"
                        android:textColor="@color/white"
                        android:contentDescription="@string/pause_for_today" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSetReminderTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/reminder_times_list"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_reminder_time" />

                <TextView
                    android:id="@+id/textViewSetNoReminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_reminders_set_yet_add_times_below"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Custom message card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textViewCustomMessageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_hydration_message_label"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextCustomHydrationMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:minHeight="48dp"
                    android:maxLines="2"
                    android:inputType="textCapSentences|textMultiLine"
                    android:hint="@string/custom_hydration_message_hint"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/textColorHint"
                    android:backgroundTint="@color/colorAccentBlue" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Notification & smart options card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textViewNotificationOptionsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_options"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp">

                    <Switch
                        android:id="@+id/switchReminderSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_sound"
                        android:contentDescription="@string/enable_sound"
                        android:importantForAccessibility="yes"
                        android:focusable="true"
                        android:textColor="@color/textColorPrimary" />

                    <Switch
                        android:id="@+id/switchReminderVibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/enable_vibration"
                        android:contentDescription="@string/enable_vibration"
                        android:importantForAccessibility="yes"
                        android:focusable="true"
                        android:textColor="@color/textColorPrimary" />

                    <TextView
                        android:id="@+id/textViewSmartRemindersLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/smart_reminders"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchEnableSmartReminders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/enable_smart_reminders"
                        android:textColor="@color/textColorPrimary"
                        android:contentDescription="@string/enable_smart_reminders"
                        android:importantForAccessibility="yes"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/textViewNoDrinkThresholdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/no_drink_threshold_label"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextNoDrinkThresholdMinutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:minEms="3"
                        android:ems="3"
                        android:minHeight="48dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:hint="@string/minutes_hint"
                        android:textColor="@color/textColorPrimary"
                        android:textColorHint="@color/textColorHint"
                        android:backgroundTint="@color/colorAccentGreen" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
    app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonSaveHydrationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_settings"
            android:backgroundTint="@color/colorAccentBlue"
            android:textColor="@color/white" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>