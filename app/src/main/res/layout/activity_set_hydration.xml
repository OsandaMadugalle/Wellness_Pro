<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_set_hydration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".ui.SetHydrationActivity">

    <LinearLayout
        android:id="@+id/headerLayoutSetHydration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewSetHydrationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set Hydration Goal &amp; Reminders"
            android:textColor="@color/textColorPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            app:autoSizeMaxTextSize="26sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayoutSetHydration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutSetHydration"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewSetGlassesGoalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Glasses Goal:"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSetGlassesGoal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="@color/textColorPrimary"
            android:backgroundTint="@color/colorAccentGreen"
            android:textColorHint="@color/textColorHint"
            android:hint="e.g. 8"
            android:gravity="center"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewSetGlassesGoalLabel"
            app:layout_constraintStart_toEndOf="@id/textViewSetGlassesGoalLabel" />

        <TextView
            android:id="@+id/textViewSetRemindersInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Set reminders below."
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/editTextSetGlassesGoal"
            app:layout_constraintStart_toEndOf="@id/editTextSetGlassesGoal"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSetReminderTimes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/editTextSetGlassesGoal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_reminder_time" />

        <TextView
            android:id="@+id/textViewSetNoReminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No reminders set yet. Add times below."
            android:textColor="@color/textColorSecondary"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/recyclerViewSetReminderTimes"
            app:layout_constraintBottom_toBottomOf="@id/recyclerViewSetReminderTimes"
            app:layout_constraintStart_toStartOf="@id/recyclerViewSetReminderTimes"
            app:layout_constraintEnd_toEndOf="@id/recyclerViewSetReminderTimes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottomSetHydration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonSetAddTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Add Reminder Time"
            android:backgroundTint="@color/colorAccentGreen"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonSaveHydrationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:backgroundTint="@color/colorAccentBlue"
            android:textColor="@color/white" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/navBarContainerBottomSetHydration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>