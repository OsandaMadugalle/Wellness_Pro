<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".NotificationScreen">

    <ImageButton
        android:id="@+id/buttonBackTop2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="@dimen/screen_padding"
        android:layout_marginTop="@dimen/header_padding_top"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:tint="@color/iconTint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="yes"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/buttonClearAll"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/header_padding_top"
        android:layout_marginEnd="@dimen/screen_padding"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/clear_all_notifications"
        android:padding="8dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_clear_all"
        app:tint="@color/iconTint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/headerTextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/buttonBackTop2"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBackTop2"
        app:layout_constraintStart_toEndOf="@+id/buttonBackTop2"
        app:layout_constraintEnd_toStartOf="@+id/buttonClearAll"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/textViewScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textColor="@color/textColorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/textViewScreenSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/check_your_day"
            android:textColor="@color/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/dividerColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonBackTop2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="1dp"/>

    <!-- Pull-to-refresh wrapper for notifications -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshNotifications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

        <!-- FrameLayout so we can overlay an empty state on top of the RecyclerView -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNotifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/screen_padding"
                android:paddingEnd="@dimen/screen_padding"
                android:paddingTop="12dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_app_notification"
                android:contentDescription="@string/notifications_list" />

            <TextView
                android:id="@+id/textViewNoNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_notifications_yet"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:importantForAccessibility="yes"
                android:accessibilityHeading="false" />

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>