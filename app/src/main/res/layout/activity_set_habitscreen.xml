<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SetHabitScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
    android:paddingLeft="@dimen/screen_padding"
    android:paddingTop="@dimen/header_padding_top"
    android:paddingRight="@dimen/screen_padding"
    android:paddingBottom="@dimen/header_padding_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_a_habit"
            android:textColor="@color/textColorPrimary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            app:autoSizeMaxTextSize="28sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomActionsContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/screen_padding"
            android:paddingEnd="@dimen/screen_padding">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habitTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardBackgroundColor"
                android:padding="@dimen/screen_padding">

                <!-- Replaced custom spinner with Material exposed dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/itemContainerSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/cardBackgroundColor"
                    android:minHeight="48dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="6dp"
                    app:endIconMode="dropdown_menu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/textViewSelectedItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:clickable="true"
                        android:inputType="none"
                        android:hint="@string/habit_type"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="@android:color/transparent" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/valueContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/cardBackgroundColor"
                    android:minHeight="48dp"
                    android:paddingStart="@dimen/screen_padding"
                    android:paddingTop="10dp"
                    android:paddingEnd="@dimen/screen_padding"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/itemContainerSpinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/textViewValueUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_e_g_glasses_km_minutes"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/editTextValueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:maxWidth="100dp"
                        android:inputType="number"
                        android:text="@string/_8"
                        android:textColor="@color/textColorPrimary"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="16sp"
                        android:imeOptions="actionDone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@id/textViewValueUnit"
                        android:layout_marginStart="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:background="@color/cardBackgroundColor"
                android:padding="@dimen/screen_padding">

                <TextView
                    android:id="@+id/textViewSchedulePrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/scheduleButtonFlow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:constraint_referenced_ids="buttonDaily,buttonWeekly,buttonWeekdays"
                    app:flow_wrapMode="chain"
                    app:flow_horizontalStyle="spread_inside"
                    app:flow_maxElementsWrap="3"
                    app:flow_horizontalGap="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewSchedulePrompt"/>

                <Button
                    android:id="@+id/buttonDaily"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/daily"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/textColorPrimary"
                    app:backgroundTint="@color/colorAccentGreen"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="80dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/buttonWeekly"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weekly"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="13sp"
                    tools:ignore="MissingConstraints"
                    android:textColor="@color/textColorPrimary"
                    app:backgroundTint="@color/cardBackgroundColor"/>

                <Button
                    android:id="@+id/buttonWeekdays"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weekdays"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="13sp"
                    tools:ignore="MissingConstraints"
                    android:textColor="@color/textColorPrimary"
                    app:backgroundTint="@color/cardBackgroundColor"/>

                

            </androidx.constraintlayout.widget.ConstraintLayout>

            


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consistencyMessageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/margin_standard"
                android:background="@color/cardBackgroundColor"
                android:paddingStart="@dimen/screen_padding"
                android:paddingEnd="@dimen/screen_padding"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textViewConsistencyMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/proud_of_your_consistency"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    app:autoSizeMaxTextSize="22sp"
                    app:autoSizeMinTextSize="18sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomActionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
    android:paddingStart="@dimen/screen_padding"
    android:paddingEnd="@dimen/screen_padding"
        android:background="@color/backgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/navBarContainerBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonSetHabit"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/set_habit"
            android:textColor="@color/textColorPrimary"
            app:backgroundTint="@color/colorAccentGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <!-- Reusable bottom navigation bar container (matches pattern used elsewhere) -->
    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>