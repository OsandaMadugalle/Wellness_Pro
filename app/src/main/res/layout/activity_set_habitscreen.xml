<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0A1F2E"
    tools:context=".SetHabitScreen">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FF0A1F2E"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/buttonBackTop"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_back"
            app:tint="#FFE8F4F8" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textViewScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_a_habit"
            android:textColor="#FFE8F4F8"
            android:textSize="28sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="28sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <View
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:visibility="invisible"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomActionsContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habitTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF1E3A5A"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewHabitTypePrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/habit_type"
                    android:textColor="#FFE8F4F8"
                    android:textSize="17sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/itemContainerSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#FF1E3A5A"
                    android:minHeight="48dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHabitTypePrompt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/textViewSelectedItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/hydration_txt_em"
                        android:textColor="#FFE8F4F8"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewDropdownArrow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:id="@+id/imageViewDropdownArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_dropdown_arrow"
                        app:tint="#FFE8F4F8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/valueContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#FF1E3A5A"
                    android:minHeight="48dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/itemContainerSpinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/textViewValueUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/glasses_day"
                        android:textColor="#FFE8F4F8"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/editTextValueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:maxWidth="100dp"
                        android:inputType="number"
                        android:text="@string/_8"
                        android:textColor="#FFE8F4F8"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="16sp"
                        android:imeOptions="actionDone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@id/textViewValueUnit"
                        android:layout_marginStart="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#FF1E3A5A"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewSchedulePrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule"
                    android:textColor="#FFE8F4F8"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/scheduleButtonFlow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:constraint_referenced_ids="buttonDaily,buttonWeekly,buttonWeekdays"
                    app:flow_wrapMode="chain"
                    app:flow_horizontalStyle="spread_inside"
                    app:flow_maxElementsWrap="3"
                    app:flow_horizontalGap="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewSchedulePrompt"/>

                <Button
                    android:id="@+id/buttonDaily"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/daily"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="13sp"
                    android:textColor="#FFE8F4F8"
                    app:backgroundTint="#FF4CAF50"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="80dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/buttonWeekly"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weekly"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="13sp"
                    tools:ignore="MissingConstraints"
                    android:textColor="#FFE8F4F8"
                    app:backgroundTint="#FF1E3A5A"/>

                <Button
                    android:id="@+id/buttonWeekdays"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weekdays"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="13sp"
                    tools:ignore="MissingConstraints"
                    android:textColor="#FFE8F4F8"
                    app:backgroundTint="#FF1E3A5A"/>

                <TextView
                    android:id="@+id/textViewRemindMePrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/remind_me_at"
                    android:textColor="#FFE8F4F8"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scheduleButtonFlow" />

                <TextView
                    android:id="@+id/textViewReminderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:padding="4dp"
                    android:text="@string/time"
                    android:textColor="#FF4CAF50"
                    android:textSize="17sp"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewRemindMePrompt"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewRemindMePrompt" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- START: Added Hydration Reminder Settings Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hydrationReminderSettingsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#FF1E3A5A"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textViewHydrationReminderLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hydration Reminders"
                    android:textColor="#FFE8F4F8"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/switchHydrationReminder"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchHydrationReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewHydrationReminderLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHydrationReminderLabel" />

                <TextView
                    android:id="@+id/textViewReminderIntervalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Remind every (minutes):"
                    android:textColor="#FFE8F4F8"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHydrationReminderLabel" />

                <EditText
                    android:id="@+id/editTextReminderIntervalMinutes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:background="#FF1E3A5A"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#FFE8F4F8"
                    android:textSize="16sp"
                    android:hint="e.g., 60"
                    android:textColorHint="#FFA0A0A0"
                    app:layout_constraintStart_toEndOf="@+id/textViewReminderIntervalLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewReminderIntervalLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewReminderIntervalLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- END: Added Hydration Reminder Settings Container -->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consistencyMessageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#FF1E3A5A"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textViewConsistencyMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/proud_of_your_consistency"
                    android:textColor="#FFE8F4F8"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    app:autoSizeMaxTextSize="22sp"
                    app:autoSizeMinTextSize="18sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomActionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FF0A1F2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonSetHabit"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/set_habit"
            android:textColor="#FFE8F4F8"
            app:backgroundTint="#FF4CAF50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>