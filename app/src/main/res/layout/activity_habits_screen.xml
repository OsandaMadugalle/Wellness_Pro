<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_habits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".HabitsScreen">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
    android:paddingLeft="@dimen/screen_padding"
    android:paddingTop="@dimen/header_padding_top"
    android:paddingRight="@dimen/screen_padding"
    android:paddingBottom="@dimen/header_padding_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Habits"
            android:textColor="@color/textColorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/textViewScreenSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/long_term_habit_tracking"
            android:textColor="@color/textColorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/navBarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/setHabitLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/cardBackgroundColor"
        android:orientation="horizontal"
    android:paddingStart="@dimen/screen_padding"
    android:paddingTop="8dp"
    android:paddingEnd="@dimen/screen_padding"
    android:paddingBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/navBarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewSetHabitPrompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/want_to_set_a_habit"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSetHabit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/set_a_habit"
            android:textColor="@color/textColorPrimary"
            app:backgroundTint="@color/colorAccentGreen" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/habitStatusLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
    android:background="@color/cardBackgroundColor"
    android:padding="@dimen/screen_padding"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/setHabitLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewHabitStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/habit_status"
            android:textColor="@color/textColorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBarHabit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progress="60"
            android:progressTint="@color/colorAccentGreen"
            android:progressBackgroundTint="@color/cardBackgroundColor"
            app:layout_constraintTop_toBottomOf="@+id/textViewHabitStatusTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewProgressPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/presentage"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBarHabit"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days_duration"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/textViewProgressPercentage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/textViewXp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/habit_xp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/textViewProgressPercentage"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daysOfWeekLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/habitStatusLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Sunday -->
        <LinearLayout
            android:id="@+id/dayContainerS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewDayStatusS"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/empty_circle"
                app:tint="@color/iconTint"
                android:contentDescription="@string/day_status"/>
        </LinearLayout>

        <!-- Monday -->
        <LinearLayout
            android:id="@+id/dayContainerM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewDayStatusM"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/empty_circle"
                app:tint="@color/iconTint"
                android:contentDescription="@string/day_status"/>
        </LinearLayout>

        <!-- Tuesday -->
        <LinearLayout
            android:id="@+id/dayContainerT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewDayStatusT"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/empty_circle"
                app:tint="@color/iconTint"
                android:contentDescription="@string/day_status"/>
        </LinearLayout>

        <!-- Wednesday -->
        <LinearLayout
            android:id="@+id/dayContainerW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/w"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewDayStatusW"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/empty_circle"
                app:tint="@color/iconTint"
                android:contentDescription="@string/day_status"/>
        </LinearLayout>

        <!-- Thursday -->
        <LinearLayout
            android:id="@+id/dayContainerTh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewDayStatusTh"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/empty_circle"
                app:tint="@color/iconTint"
                android:contentDescription="@string/day_status"/>
        </LinearLayout>

        <!-- Friday -->
        <LinearLayout
            android:id="@+id/dayContainerF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewDayStatusF"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/empty_circle"
                app:tint="@color/iconTint"
                android:contentDescription="@string/day_status"/>
        </LinearLayout>

        <!-- Saturday -->
        <LinearLayout
            android:id="@+id/dayContainerSa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewDayStatusSa"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/empty_circle"
                app:tint="@color/iconTint"
                android:contentDescription="@string/day_status"/>
        </LinearLayout>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="dayContainerS,dayContainerM,dayContainerT,dayContainerW,dayContainerTh,dayContainerF,dayContainerSa"
            app:flow_horizontalGap="6dp"
            app:flow_horizontalStyle="spread_inside"
            app:flow_maxElementsWrap="7"
            app:flow_wrapMode="chain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollViewHabits"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toTopOf="@+id/daysOfWeekLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/habitItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/screen_padding"
            android:paddingEnd="@dimen/screen_padding"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            <!-- Habit items will be added here dynamically -->
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>