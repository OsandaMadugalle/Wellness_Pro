<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0A1F2E"
    tools:context=".ui.MoodHistoryActivity">

    <TextView
        android:id="@+id/textViewMoodHistoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mood History"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFE8F4F8"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonShareMoodHistory" />

    <ImageButton
        android:id="@+id/buttonShareMoodHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_share"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Share Mood History"
        app:tint="#FFE8F4F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewMoodHistoryTitle"
        app:layout_constraintBottom_toBottomOf="@id/textViewMoodHistoryTitle" />

    <!-- ADDED: TextView for Chart Title -->
    <TextView
        android:id="@+id/textViewChartTitleMoodHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Mood Trend (Last 7 Days)"
        android:textColor="#FFE8F4F8"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/textViewMoodHistoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ADDED: LineChart -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/moodChartHistory"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewChartTitleMoodHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ADDED: TextView for No Chart Data -->
    <TextView
        android:id="@+id/textViewNoMoodsChartHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not enough mood entries for a trend yet."
        android:textColor="#FFA0A0A0"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/moodChartHistory"
        app:layout_constraintBottom_toBottomOf="@id/moodChartHistory"
        app:layout_constraintStart_toStartOf="@id/moodChartHistory"
        app:layout_constraintEnd_toEndOf="@id/moodChartHistory" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMoodHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp" 
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/moodChartHistory" 
        app:layout_constraintBottom_toTopOf="@id/fabLogNewMood" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/list_item_mood_entry" />

    <TextView
        android:id="@+id/textViewNoMoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No mood entries yet."
        android:textColor="#FFA0A0A0"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/moodChartHistory" 
        app:layout_constraintBottom_toTopOf="@id/fabLogNewMood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLogNewMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="#FFE8F4F8"
        app:backgroundTint="#FF4CAF50"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Log New Mood" />

    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>