<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_mood_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".ui.MoodHistoryActivity">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/headerLayoutMoodHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewMoodHistoryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mood_history"
            android:textColor="@color/textColorPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            app:autoSizeMaxTextSize="26sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <ImageButton
            android:id="@+id/buttonShareMoodHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_share"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/share_mood_history"
            app:tint="@color/iconTint"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Filter Chips Row -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutMoodHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLast7"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7d"
            android:checked="true"
            android:contentDescription="Last 7 days" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLast14"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14d"
            android:contentDescription="Last 14 days" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLast30"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30d"
            android:contentDescription="Last 30 days" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:contentDescription="All entries" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/contentScrollViewMoodHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroupFilters"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayoutMoodHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="88dp">

            <TextView
                android:id="@+id/textViewChartTitleMoodHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/daily_mood_trend"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewAverageMoodSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:contentDescription="Average mood summary"
                app:layout_constraintTop_toBottomOf="@id/textViewChartTitleMoodHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Average mood: ðŸ™‚ (last 7 days)" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/moodChartHistory"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textViewAverageMoodSummary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewNoMoodsChartHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/not_enough_mood_entries_for_a_trend_yet"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/moodChartHistory"
                app:layout_constraintBottom_toBottomOf="@id/moodChartHistory"
                app:layout_constraintStart_toStartOf="@id/moodChartHistory"
                app:layout_constraintEnd_toEndOf="@id/moodChartHistory" />

            <View
                android:id="@+id/dividerAfterChart"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/dividerColor"
                app:layout_constraintTop_toBottomOf="@id/moodChartHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMoodHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="Mood entries list"
                app:layout_constraintTop_toBottomOf="@id/dividerAfterChart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/list_item_mood_entry" />

            <TextView
                android:id="@+id/textViewNoMoods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/no_mood_entries_yet"
                android:textColor="@color/textColorSecondary"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/recyclerViewMoodHistory"
                app:layout_constraintBottom_toBottomOf="@id/recyclerViewMoodHistory"
                app:layout_constraintStart_toStartOf="@id/recyclerViewMoodHistory"
                app:layout_constraintEnd_toEndOf="@id/recyclerViewMoodHistory" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLogNewMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/iconTint"
        app:backgroundTint="@color/colorAccentGreen"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/log_new_mood" />

    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>