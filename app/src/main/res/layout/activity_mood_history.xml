<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_mood_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".ui.MoodHistoryActivity">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/headerLayoutMoodHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
    android:paddingLeft="@dimen/screen_padding"
    android:paddingTop="@dimen/header_padding_top"
    android:paddingRight="@dimen/screen_padding"
    android:paddingBottom="@dimen/header_padding_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:visibility="invisible" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewMoodHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mood_history"
                android:textColor="@color/textColorPrimary"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                app:autoSizeMaxTextSize="26sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/buttonCalendarOpen"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/log_new_mood"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="@color/iconTint" />

            <ImageButton
                android:id="@+id/buttonShareMoodHistory"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/share"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_share"
                app:tint="@color/iconTint" />

        </LinearLayout>

    </LinearLayout>

    <!-- Filter Chips removed per request: default view shows all entries -->

    <!-- Scrollable Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollViewMoodHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutMoodHistory"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayoutMoodHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:paddingStart="@dimen/screen_padding"
        android:paddingEnd="@dimen/screen_padding"
            android:paddingTop="8dp"
            android:paddingBottom="88dp">

            <TextView
                android:id="@+id/textViewChartTitleMoodHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/daily_mood_trend"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewAverageMoodSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:contentDescription="@string/average_mood_summary"
                app:layout_constraintTop_toBottomOf="@id/textViewChartTitleMoodHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Average mood: ðŸ™‚ (last 7 days)" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupCalendarFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textViewAverageMoodSummary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFilter1d"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1d" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFilter7d"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7d" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFilter30d"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30d" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFilterAll"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <CalendarView
                android:id="@+id/calendarViewMoodHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/toggleGroupCalendarFilter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/dividerAfterChart"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/dividerColor"
                app:layout_constraintTop_toBottomOf="@id/calendarViewMoodHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMoodHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/margin_standard"
                android:contentDescription="@string/mood_entries_list"
                app:layout_constraintTop_toBottomOf="@id/dividerAfterChart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/list_item_mood_entry" />

            <TextView
                android:id="@+id/textViewNoMoods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/no_mood_entries_yet"
                android:textColor="@color/textColorSecondary"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/recyclerViewMoodHistory"
                app:layout_constraintBottom_toBottomOf="@id/recyclerViewMoodHistory"
                app:layout_constraintStart_toStartOf="@id/recyclerViewMoodHistory"
                app:layout_constraintEnd_toEndOf="@id/recyclerViewMoodHistory" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLogNewMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_standard"
    android:layout_marginBottom="@dimen/margin_standard"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/iconTint"
        app:backgroundTint="@color/colorAccentGreen"
        app:layout_constraintBottom_toTopOf="@id/navBarContainerBottom"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/log_new_mood" />

    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>