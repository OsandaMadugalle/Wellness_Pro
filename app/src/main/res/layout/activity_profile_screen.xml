<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ProfileScreen">

    

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- Header Section (standardized) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@color/backgroundColor"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/screen_padding"
        android:paddingTop="@dimen/header_padding_top"
        android:paddingRight="@dimen/screen_padding"
        android:paddingBottom="@dimen/header_padding_bottom"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- avatar: show user avatar (or initials) -->
            <ImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_avatar"
                android:contentDescription="@string/user_avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_avatar_circle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewScreenTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="4dp"
                    app:autoSizeMaxTextSize="28sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <!-- Edit profile button moved to header (prominent, top-right) -->
            <Button
                android:id="@+id/buttonEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/profile_edit_profile"
                android:textColor="@color/white"
                app:backgroundTint="@color/colorAccentRed"
                android:contentDescription="@string/profile_edit_profile" />

        </LinearLayout>

    </LinearLayout>

    

    <!-- Scrollable Content Section -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/navBarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/textViewOverviewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/profile_overview"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/textViewOverviewTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/tileHabits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:background="@color/cardBackgroundColor"
                    android:contentDescription="@string/profile_overview">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_habits"
                        app:tint="@color/iconTint"
                        android:contentDescription="@string/habits" />

                    <TextView
                        android:id="@+id/textViewHabitsSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        tools:text="Habits done: 3/5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tileHydration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:background="@color/cardBackgroundColor"
                    android:contentDescription="@string/today_s_hydration">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_hydration"
                        app:tint="@color/iconTint"
                        android:contentDescription="@string/hydration" />

                    <TextView
                        android:id="@+id/textViewHydrationSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        tools:text="Hydration: 6/8" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionsRowProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/statsRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Navigation Bar -->
    <FrameLayout
        android:id="@+id/navBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <include layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
