<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".DashboardScreen">

    <FrameLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="4dp"
    android:paddingLeft="@dimen/screen_padding"
    android:paddingTop="@dimen/header_padding_top"
    android:paddingRight="@dimen/screen_padding"
    android:paddingBottom="@dimen/header_padding_bottom">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Dashboard"
            android:textColor="@color/textColorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <ImageView
            android:id="@+id/buttonNotify"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/notifications"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_notification"
            app:tint="@color/colorAccentGreen" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/navBarContainerBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp">

        <include
            android:id="@+id/reusableNavBar"
            layout="@layout/layout_reusable_nav_bar" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navBarContainerBottom"
        android:layout_below="@id/headerLayout"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/date"
                android:textColor="@color/textColorPrimary"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- START: Current Mood Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/currentMoodCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/cardBackgroundColor"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDate"> <!-- Adjusted: Now below textViewDate -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/screen_padding">

                    <TextView
                        android:id="@+id/textViewCurrentMoodTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_latest_mood"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewNoMoodsLoggedYet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/no_moods_logged_yet_tap_the_journal_to_add_one"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentMoodTitle"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/groupMoodDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="textViewCurrentMoodEmoji,textViewCurrentMoodDescription,textViewCurrentMoodTimestamp,textViewCurrentMoodNotesLabel,textViewCurrentMoodNotes" />

                    <TextView
                        android:id="@+id/textViewCurrentMoodEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48sp"
                        tools:text="ðŸ˜„"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentMoodTitle" />

                    <TextView
                        android:id="@+id/textViewCurrentMoodDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        tools:text="Feeling Happy"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toEndOf="@+id/textViewCurrentMoodEmoji"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textViewCurrentMoodEmoji"
                        app:layout_constraintBottom_toBottomOf="@+id/textViewCurrentMoodEmoji"/>

                    <TextView
                        android:id="@+id/textViewCurrentMoodTimestamp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Logged on Oct 26, 2023 at 10:00 AM"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/textViewCurrentMoodEmoji"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentMoodEmoji" />

                    <TextView
                        android:id="@+id/textViewCurrentMoodNotesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/notes"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentMoodTimestamp" />

                    <TextView
                        android:id="@+id/textViewCurrentMoodNotes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="Had a great day, productive meeting and good workout."
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentMoodNotesLabel" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- END: Current Mood Card -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/screenTimeItemGroup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/stepCounterItemGroup"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currentMoodCardView">

                <ImageView
                    android:id="@+id/imageViewScreenTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/screen_time_background"
                    android:background="@color/colorAccentBlue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewScreenTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="@string/screen_time_value"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textViewScreenTimeLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.45"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textViewScreenTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="@string/app_time"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewScreenTimeValue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stepCounterItemGroup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/screenTimeItemGroup"
                app:layout_constraintTop_toTopOf="@+id/screenTimeItemGroup">

                <ImageView
                    android:id="@+id/imageViewStepCounter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/step_counter_background"
                    android:background="@color/colorAccentBlue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textViewStepCounterValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="@string/step_counter_value"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textViewStepCounterSubLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.45"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textViewStepCounterSubLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="@string/steps"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@+id/textViewStepCounterLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewStepCounterValue" />

                <TextView
                    android:id="@+id/textViewStepCounterLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="@string/step_counter"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewStepCounterSubLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- START: Hydration Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hydrationProgressCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/cardBackgroundColor"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/screenTimeItemGroup">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/screen_padding">

                    <TextView
                        android:id="@+id/textViewHydrationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_s_hydration"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progressBarHydration"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:max="8"
                        android:progress="0"
                        android:progressTint="@color/colorAccentBlue"
                        android:progressBackgroundTint="@color/progress_background_hydration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewHydrationTitle" />

                    <TextView
                        android:id="@+id/textViewHydrationProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="0/8 glasses"
                        android:text="@string/hydration_progress_placeholder"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/progressBarHydration"
                        app:layout_constraintTop_toBottomOf="@+id/progressBarHydration" />

                     <TextView
                        android:id="@+id/textViewNoHydrationData"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/log_water_intake_from_the_hydration_screen"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewHydrationTitle"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- END: Hydration Progress Card -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</RelativeLayout>