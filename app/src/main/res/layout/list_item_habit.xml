<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF1E3A5A"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textViewHabitEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¯"
        android:textColor="#FFE8F4F8"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/textViewHabitEmoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/actionsContainer">

        <TextView
            android:id="@+id/textViewHabitTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habit Title"
            android:textColor="#FFE8F4F8"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewHabitDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target / Schedule"
            android:textColor="#FFE8F4F8"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/buttonDeleteHabit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete_habit_description"
            app:tint="#FFE8F4F8"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/buttonEditHabit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_habit_description"
            app:tint="#FFE8F4F8"
            android:src="@android:drawable/ic_menu_edit" />

        <!-- ADDED Increment Button -->
        <ImageButton
            android:id="@+id/buttonIncrementHabit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:src="@android:drawable/ic_input_add"
            app:tint="#FF4CAF50"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/increment_habit_progress"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageViewHabitIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/habit_completion_status_icon"
            app:srcCompat="@drawable/ic_check_circle_outline"
            app:tint="#FFE8F4F8"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>